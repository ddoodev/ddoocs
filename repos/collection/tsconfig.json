{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2019",
    "lib": [
      "es2020",
      "dom"
    ],
    "sourceMap": true,
    "removeComments": false,
    "alwaysStrict": true,
    "pretty": true,
    "incremental": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "declaration": true,
    "declarationDir": "./types",
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "baseUrl": ".",
    "paths": {
      "@src/*": [ "./src/*" ]
    },
    "outDir": "./dist",
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths",
      }
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "types"
  ],
  "include": [
    "src/**/*"
  ]
}
